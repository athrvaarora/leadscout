# LeadScout Backend Environment Variables

# Environment and Server Settings
NODE_ENV=production  # Use 'production' for deployed app, 'development' for local
PORT=5100            # Port number (Railway may override this)
FRONTEND_URL=https://leadscout.vercel.app  # Your frontend URL for CORS

# Database - Choose MongoDB or PostgreSQL
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/leadscout  # MongoDB Atlas connection string

# PostgreSQL configuration (for Railway)
DB_NAME=railway
DB_USER=postgres 
DB_PASSWORD=your_password
DB_HOST=your_railway_db_host
DB_PORT=your_db_port
DB_SSL=true
DATABASE_URL=postgresql://postgres:password@host:port/railway

# Authentication
JWT_SECRET=create_a_strong_random_secret_key_here  # Generate a strong random string
JWT_EXPIRE=30d  # Token expiration time

# API Keys
OPENAI_API_KEY=your_openai_api_key_here  # Get from OpenAI dashboard
CLAUDE_API_KEY=your_claude_api_key  # Optional - for Claude API integration

# LinkedIn API credentials (optional - enables official API integration)
LINKEDIN_API_KEY=your_linkedin_client_id
LINKEDIN_API_SECRET=your_linkedin_client_secret